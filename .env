# Configuração de banco de dados PostgreSQL
DATABASE_URL=postgresql://postgres:admin@localhost:5432/hlg_fitness
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=admin
PGDATABASE=hlg_fitness

# Configuração do servidor
PORT=5000
NODE_ENV=development

# Chave de sessão (gere uma chave aleatória para produção)
SESSION_SECRET=sua_chave_secreta_de_sessao

# Configuração de upload de arquivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB em bytes

# Configuração para Capacitor (Android/iOS)
APP_NAME=HLGFitness
APP_ID=com.hlgfitness.app
APP_VERSION=1.0.0